{
  "name": "promise-with-state",
  "version": "1.1.1",
  "description": "A library to use queryable promises or make native promise A+ queryable",
  "main": "dist/main.min.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "postinstall": "pnpm run clean:types && pnpm run types:dev && pnpm run types:lint:dev",
    "prebundle": "pnpm run test:cover && pnpm run clean:dist && pnpm run docs",
    "bundle": "pnpm run build:dev && pnpm run build:prod",
    "postbundle": "pnpm run types:prod && pnpm run types:lint:prod",
    "build": "webpack --config webpack.config.js",
    "build:dev": "NODE_ENV=development pnpm run build",
    "build:prod": "NODE_ENV=production pnpm run build",
    "types:dev": "tsc --project tsconfig.dev.json",
    "types:prod": "tsc --project tsconfig.prod.json",
    "types:lint": "eslint --color --fix",
    "types:lint:dev": "pnpm run types:lint 'typings/*' --ignore-pattern 'typings/*.map'",
    "types:lint:prod": "pnpm run types:lint 'dist/*' --ignore-pattern 'dist/*.map' --ignore-pattern 'dist/*.js'",
    "clean:dist": "npx rimraf dist",
    "clean:types": "npx rimraf typings",
    "predocs": "pnpm run lint:fix",
    "docs": "documentation readme src/** --parse-extension ts --section=JSDOC",
    "docs:watch": "pnpm run docs --watch",
    "lint": "eslint --color 'src/**'",
    "lint:watch": "esw --color --watch 'src/**'",
    "lint:fix": "eslint --color --fix 'src/**'",
    "test": "jest --verbose --runInBand",
    "test:watch": "pnpm run test --watch",
    "test:watch-all": "pnpm run test --watchAll",
    "test:cover": "pnpm run test --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xiscodev/promise-with-state.git"
  },
  "keywords": [
    "promises",
    "queryable",
    "states",
    "typescript"
  ],
  "author": "Jose Diaz <contact@xisco.dev> (https://xisco.dev)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xiscodev/promise-with-state/issues"
  },
  "homepage": "https://github.com/xiscodev/promise-with-state#readme",
  "devDependencies": {
    "@babel/cli": "7.24.5",
    "@babel/core": "7.24.5",
    "@babel/preset-env": "7.24.5",
    "@babel/preset-typescript": "7.24.1",
    "@babel/types": "7.24.5",
    "@jest/globals": "29.7.0",
    "@types/node": "20.12.11",
    "@types/webpack": "5.28.5",
    "@typescript-eslint/eslint-plugin": "7.8.0",
    "@typescript-eslint/parser": "7.8.0",
    "@typescript-eslint/types": "7.8.0",
    "babel-loader": "9.1.3",
    "documentation": "14.0.3",
    "eslint": "8.57.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "28.5.0",
    "eslint-plugin-jsdoc": "48.2.4",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-promise": "6.1.1",
    "eslint-watch": "8.0.0",
    "jest": "29.7.0",
    "jest-runner-tsc": "1.6.0",
    "pre-commit": "1.2.2",
    "rimraf": "5.0.6",
    "terser-webpack-plugin": "5.3.10",
    "ts-jest": "29.1.2",
    "typescript": "5.4.5",
    "webpack": "5.91.0",
    "webpack-cli": "5.1.4"
  }
}
