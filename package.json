{
  "name": "promise-with-state",
  "version": "1.0.0",
  "description": "A library to use queryable promises or make native promise A+ queryable",
  "main": "main.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "webpack --config webpack.config.js",
    "build:dev": "NODE_ENV=development npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "clean": "rimraf dist",
    "postclean": "npm run test:cover",
    "predocs": "npm run test:cover",
    "docs": "documentation readme src/** --section=JSDOC",
    "docs:watch": "npm run docs -- --watch",
    "test": "npm run lint && jest --verbose --runInBand",
    "test:watch": "npm run test -- --watch",
    "test:watch-all": "npm run test -- --watchAll",
    "test:cover": "npm run test -- --coverage",
    "lint": "eslint --fix \"src/**/*.js\""
  },
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xoxefdp/promise-with-state.git"
  },
  "keywords": [
    "promises",
    "queryable",
    "states"
  ],
  "author": "Jose Diaz <contact@xisco.dev>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xoxefdp/promise-with-state/issues"
  },
  "homepage": "https://github.com/xoxefdp/promise-with-state#readme",
  "devDependencies": {
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "babel-jest": "^27.0.6",
    "documentation": "^13.2.5",
    "eslint": "^7.31.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-jsdoc": "^35.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.0.6",
    "jest-runner-eslint": "^0.10.1",
    "pre-commit": "^1.2.2",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.1.4",
    "webpack": "^5.46.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "the-type-validator": "^1.1.1"
  }
}
